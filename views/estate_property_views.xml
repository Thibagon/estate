<?xml version="1.0"?>
    <odoo>
        <!-- Chapter 5 -->
        <record id="estate_property_model_action" model="ir.actions.act_window">
            <field name="name">List</field>
            <field name="res_model">estate_property</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Chapter 7 -->
        <record id="estate_property_model_view_tree" model="ir.ui.view">
            <field name="name">Estate property list</field>
            <field name="model">estate_property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="bedrooms"/>
                    <field name="living_area_surface"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="date_availability"/>
                </tree>
            </field>
        </record>

        <record id="estate_property_model_view_form" model="ir.ui.view">
            <field name="name">Estate property list</field>
            <field name="model">estate_property</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <field name="tags_ids" widget="many2many_tags"/>
                        <group>
                            <group>
                                <field name="property_type_id"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="best_offer"/>
                                <field name="expected_price"/>
                                <field name="selling_price"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area_surface"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="state"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <!--<field name="offer_ids" widget="estate_property_offer_one2many" context="
                                    {'price': price}"/>-->
                                <field name="offer_ids"/>
                            </page>
                            <page string="Other infos">
                                <group>
                                    <field name="buyer_id"/>
                                    <field name="salesman_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="estate_property_model_view_search" model="ir.ui.view">
            <field name="name">Estate property list</field>
            <field name="model">estate_property</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="bedrooms"/>
                    <field name="living_area_surface"/>
                    <field name="expected_price"/>
                    <field name="facades"/>
                    <field name="property_type_id"/>
                    <filter name="Available" domain="['|',('state','=','new'),('state','=','offer_received')]"/>
                    <filter name="Postcode" context="{'group_by':'postcode'}"/>
                </search>
            </field>
        </record>

    </odoo>
